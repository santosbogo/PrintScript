# Top-most EditorConfig file
root = true

# Set default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Override settings for Kotlin files
[{*.kt,*kts}]
max_line_length = 180
disabled_rules = import-ordering

